<h2>Available cards</h2>
	
<div class="three columns">
	<%= render 'cards/list' %>
</div>
<div class="ten columns" id="profile">
	<h3><%= @card.name %></h3>
	<%= link_to "Edit card", edit_card_path %>
	<%= link_to "Delete card", '', :method => :delete %>
	<ul>
		<li><strong>Website:</strong> <% if !@card.website.blank? %><%= link_to @card.website, @card.website %><% else %>no website<% end%> </li>
		<li><strong>Photo:</strong></li>
		<li><strong>Address:</strong></li>
		<li><strong></strong></li>
	</ul>
	
	<%= image_tag @card.avatar.url(:thumb) %>
	
	<a href="#">Download the data</a>
</div>
<div class="three columns">
<h5>Recent activity</h5>
<% if !@card.twitter.blank? %>
<script charset="utf-8" src="http://widgets.twimg.com/j/2/widget.js"></script>
<script>
new TWTR.Widget({
  version: 2,
  type: 'profile',
  rpp: 4,
  interval: 30000,
  width: 'auto',
  height: 300,
  theme: {
    shell: {
      background: '#333333',
      color: '#ffffff'
    },
    tweets: {
      background: '#000000',
      color: '#ffffff',
      links: '#4aed05'
    }
  },
  features: {
    scrollbar: false,
    loop: false,
    live: false,
    behavior: 'all'
  }
}).render().setUser('<%= @card.twitter %>').start();
</script>
<% end %>
</div>