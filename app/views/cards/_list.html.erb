<select id="cards-list">
		<option disabled="disabled">Others’ cards</option>
		<% @cards.where("public = 1 AND owner != ?", current_user.id).each do |card| %>
		<option name="<%= card.id %>"<% if @card != nil && card.id == @card.id %> selected="selected"<% end %>><%= card.name %></option>
		<% end -%>
</select>

<select id="user-list">
		<option disabled="disabled">Your cards</option>
		<% @cards.where("owner = ?", current_user.id).each do |card| %>
		<option name="<%= card.id %>"<% if @card != nil && card.id == @card.id %> selected="selected"<% end %>><%= card.name %></option>
		<% end -%>
</select>

<p>or… <br><%= link_to "Create a new card", new_card_path %></p>