<head>
	<meta charset="utf-8">
	<title>Business card manager - Home</title>
	
	<%= stylesheet_link_tag 'base' %>
	<%= stylesheet_link_tag 'skeleton' %>
	<%= stylesheet_link_tag 'layout' %>

	<link href='http://fonts.googleapis.com/css?family=Ubuntu' rel='stylesheet' type='text/css'>
	
	<!--[if lt IE 9]>
		<script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
	<![endif]-->
	
	<meta name="viewport" content="width=device-width, initial-scale=1">
 	<%= csrf_meta_tags %>
</head>
<body class="no-js">

<div class="container">
	
<%= render 'layouts/header' %>

<% if !notice.blank? %>
	<div class="msg notice"><%= notice %></div>
<% elsif !alert.blank? %>
 	<div class="msg alert"><%= alert %></div>
<% end %>

<div id="content">
<%= yield %>
</div>
<!-- / content -->
<hr />

<%= render 'layouts/footer' %>

</div>
<!-- / container -->

<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
<script>window.jQuery || document.write("<script src='assets/jquery-1.7.1.min.js'>\x3C/script>")</script>
<script src="/assets/main.js"></script>
</body>
</html>